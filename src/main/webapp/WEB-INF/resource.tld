		<attribute><description>@merge@</description><name>merge</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@minify@</description><name>minify</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@charset@</description><name>charset</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		
		<attribute><description>@refType@</description><name>refType</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@media@</description><name>media</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@title@</description><name>title</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@rel@</description><name>rel</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
	</tag>
	
    <tag>
		<description></description>
		<name>script</name>
		<tag-class>com.siberhus.web.servlet.tags.resources.ScriptResourcesTag</tag-class>
		<body-content>scriptless</body-content>
		<attribute><description>@baseDir@</description><name>baseDir</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@src@</description><name>src</name><required>true</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@name@</description><name>name</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@merge@</description><name>merge</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@minify@</description><name>minify</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@charset@</description><name>charset</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
	</tag>
	
</taglib>