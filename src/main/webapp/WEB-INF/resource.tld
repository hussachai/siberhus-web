	<tag>
		<description></description>
		<name>style</name>
		<tag-class>com.siberhus.web.servlet.tags.resources.StyleResourcesTag</tag-class>
		<body-content>scriptless</body-content>
		<attribute><description>@baseDir@</description><name>baseDir</name><required>false</required><rtexprvalue>true</rtexprvalue></attribute>
		<attribute><description>@src@</description><name>src</name><required>true</required><rtexprvalue>true</rtexprvalue></attribute>
